/**app.wxss**/
@import 'style/weui.wxss';
@import 'style/zanui/index.wxss';

.page, .content {
  position: absolute;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #f1f1f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.content-scroll {
  position: absolute;
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.content-scroll-child {
  padding-bottom: 50px;
}

.icon-small {
  width: 18px;
  height: 18px;
}

.icon-l-small {
  width: 24px;
  height: 24px;
}

.icon-mid {
  width: 30px;
  height: 30px;
}

.img-mid {
  width: 280rpx;
  height: 280rpx;
}

.dialog-close {
  position: absolute;
  right: 15px;
  top: 15px;
}

.box-btn {
  position: relative;
  z-index: 9;
  display: inline-block;
  width: 80px;
  border-top: 1px solid #f8f8f8;
  line-height: 20px;
}

.box-btn:not(:last-child) {
  border-right: 1px solid #f8f8f8;
}

.fluid-box {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
}

.navigator-hover {
  background-color: transparent;
  opacity: 1;
}

.pay-footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 0 15px;
  height: 50px;
  border-top: 1rpx solid #e5e5e5;
  text-align: right;
  box-sizing: border-box;
}

/* weui */

.weui-media-box__ft {
  position: absolute;
  right: 15px;
  top: 50%;
}

.weui-label-width-80 .weui-label {
